        <ANIMATION id="lin11" speed="2" type="linear">
            <controlpoint xx="0" yy="0" zz="0" />
            <controlpoint xx="5" yy="0" zz="5" />
            <controlpoint xx="5" yy="0" zz="12" />
        </ANIMATION>

        <ANIMATION id="lin12" speed="2" type="linear">
