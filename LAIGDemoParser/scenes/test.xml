            <SPANREF id="circ1" />
            <SPANREF id="lin12" />
        </ANIMATION>

        <ANIMATION id="combo2" type="combo">

            <SPANREF id="bez1" />
            <SPANREF id="lin2" />
            <SPANREF id="bez2" />
        </ANIMATION>

    </ANIMATIONS>


    <!-- The leaves -->
    <LEAVES>
    </LEAVES>


    <!-- The nodes -->
    <NODES>

        <ROOT id="root" />     

        <!-- The root node -->
        <NODE id="root">       
            <MATERIAL id="defaultMaterial" />         
            <TEXTURE id="null" />  

            <DESCENDANTS>  
                <NODEREF id="tabuleiroaux" />
                <NODEREF id="walls" />
                <NODEREF id="floor" />
            </DESCENDANTS>
        </NODE>

        <NODE id="tabuleiroaux">      
            <MATERIAL id="woodMaterial" />     
            <TEXTURE id ="wood" />                 

            <TRANSLATION x="40" y="0" z="0" />
            <SCALE sx="20" sy="1" sz="40" />
            <TRANSLATION x="0" y="0" z="1" />
            <ROTATION axis="x" angle="-90" />

            <DESCENDANTS>
                <LEAF id="boardquad" type="rectangle" args="0 1 1 0" />        
            </DESCENDANTS>
        </NODE>

        <NODE id="walls">      
            <MATERIAL id="wallMaterial" />     
            <TEXTURE id ="wall" />  

            <TRANSLATION x="0" y="-1" z="0" />

            <DESCENDANTS>
                <NODEREF id="wall1" /> 
                <NODEREF id="wall2" /> 
                <NODEREF id="wall3" /> 
                <NODEREF id="wall4" />        
            </DESCENDANTS>
        </NODE>    

        <NODE id="wall1">      
            <MATERIAL id="null" />     
            <TEXTURE id ="null" />                 

            <TRANSLATION x="-10" y="0" z="-10" />
            <SCALE sx="80" sy="40" sz="1" />

            <DESCENDANTS>
                <LEAF id="w1" type="rectangle" args="0 1 1 0" />        
            </DESCENDANTS>
        </NODE>

        <NODE id="wall2">      
